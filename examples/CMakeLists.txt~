

#  SET_SOURCE_FILES_PROPERTIES( wander.cpp PROPERTIES COMPILE_FLAGS "${FLTK_CFLAGS}" )


ADD_LIBRARY(wander_nd MODULE wander.cpp )

# delete the "lib" prefix from the plugin libraries
SET_TARGET_PROPERTIES( wander_nd PROPERTIES PREFIX "" )

INCLUDE(FindPkgConfig)
PKG_SEARCH_MODULE( RAPISTAGE REQUIRED autolab-rapi-stage  )

INCLUDE_DIRECTORIES( 
  ${STAGE_INCLUDE_DIRS}							
  ${RAPISTAGE_INCLUDE_DIRS}
)

INCLUDE_DIRECTORIES(
   ${STAGE_INCLUDE_DIRS}						
)

LINK_DIRECTORIES( 
  ${STAGE_LIBRARY_DIRS}						
  ${RAPI_LIBRARY_DIRS}						
  ${RAPISTAGE_LIBRARY_DIRS}						
  ${OPENGL_LIBRARY_DIRS} 
)

TARGET_LINK_LIBRARIES( wander_nd
    ${STAGE_LIBRARIES}
    ${RAPISTAGE_LIBRARIES}						
    ${OPENGL_LIBRARIES}
    autolab-nd
)

INSTALL(TARGETS wander_nd
    RUNTIME DESTINATION bin
    LIBRARY DESTINATION lib
)

