#quit_time 7200.0

# resolution of items in the world [m]
resolution 0.02

# threads may speed things up here depending on available CPU cores & workload
# threadpool 0
 threadpool 0

# configure the GUI window
window
(
  size [ 1254.000 948.000 ]

  center [ 23.885 -22.174 ]
  rotate [ 0 0 ]
  #scale 35.648
  scale 1.100

  pcam_loc [ 0 -4.000 2.000 ]
  pcam_angle [ 70.000 0 ]
